<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activities.AttendanceActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_wrapper"
            android:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/app_name"
                      android:textSize="25sp"
                      android:fontFamily="@font/harlow_solid_plain"
                      android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
            android:id="@+id/branchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch: XXXXXX"
            android:layout_below="@id/toolbar_wrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDark"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select semester "
            android:layout_below="@id/branchView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:textColor="@color/colorDark"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/branchView"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:gravity="center">

        <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="4">

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem1View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_btn">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="I"
                              android:textSize="40sp"
                              android:textColor="@color/colorPrimary"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem2View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="II"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem3View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="III"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem4View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="IV"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem5View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="V"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem6View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="VI"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem7View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="VII"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="40dp">

                <FrameLayout
                        android:id="@+id/sem8View"
                        android:onClick="changeSem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="VIII"
                              android:textSize="40sp"
                              android:textColor="@color/colorDark"
                              android:layout_gravity="center"
                    />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <EditText
                android:id="@+id/studentCounterView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="150sp"
                android:fontFamily="@font/harlow_solid_plain"
                android:padding="10dp"
                android:backgroundTint="@null"
                android:inputType="number"
                android:maxLength="3"
                android:background="@null"
                android:cursorVisible="false"
                android:textColor="@color/colorDark"
                android:layout_marginTop="10dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:fontFamily="@font/harlow_solid_plain"
                    android:padding="10dp"
                    android:textColor="@color/colorDark"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:min="0"
                    android:max="100"
                    android:thumb="@drawable/thumb_seek"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="100"
                      android:textSize="25sp"
                      android:fontFamily="@font/harlow_solid_plain"
                      android:padding="10dp"
                      android:textColor="@color/colorDark"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/attendanceSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/bg_round_btn"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
        />
    </LinearLayout>


    <TextView
            android:id="@+id/logOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/lato_regular"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorDark"/>

</RelativeLayout>